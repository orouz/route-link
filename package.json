{
  "name": "path-link",
  "description": "a utility for constructing type-safe URLs",
  "version": "1.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "repository": "github:orouz/path-link",
  "author": "Or Ouziel <ouzielor@gmail.com>",
  "bugs": "https://github.com/orouz/path-link/issues",
  "keywords": [
    "link",
    "route",
    "url"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc -b tsconfig.build.json"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "preset": "ts-jest"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-console": "error"
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": false,
    "semi": true
